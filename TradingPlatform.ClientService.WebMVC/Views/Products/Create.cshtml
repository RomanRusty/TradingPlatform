@using TradingPlatform.ClientService.Contracts.Products
@model ProductCreateViewModel;
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-6">
		<form asp-controller="Products" asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="ProductCreate.Name" class="control-label"></label>
				<input asp-for="ProductCreate.Name" class="form-control" />
				<span asp-validation-for="ProductCreate.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductCreate.Description" class="control-label"></label>
				<input asp-for="ProductCreate.Description" class="form-control" />
				<span asp-validation-for="ProductCreate.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductCreate.Price" class="control-label"></label>
				<input asp-for="ProductCreate.Price" class="form-control" />
				<span asp-validation-for="ProductCreate.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductCreate.Quantity" class="control-label"></label>
				<input asp-for="ProductCreate.Quantity" class="form-control" />
				<span asp-validation-for="ProductCreate.Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductCreate.CategoryId" value="Category" class="control-label"></label>
				<select asp-for="ProductCreate.CategoryId" class="form-control" asp-items="@Model.Categories"> </select>
				<span asp-validation-for="ProductCreate.CategoryId" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ImageThumbnail" class="control-label"></label>
				<input type="file" asp-for="ImageThumbnail" class="form-control" />
				<span asp-validation-for="ImageThumbnail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Images" class="control-label"></label>
				<input type="file" asp-for="Images" class="form-control" multiple />
				<span asp-validation-for="Images" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>


