@model TradingPlatform.EntityContracts.Product.ProductCreateDto

@{
    ViewData["Title"] = "Edit product";
}


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h2 class="text-center">Edit Product</h2>
        <hr />
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreationDate" class="form-control" value="@Model.CreationDate"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" value="@Model.Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <textarea asp-for="Price" class="form-control" value="@Model.Price"></textarea>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <textarea asp-for="Quantity" class="form-control" value="@Model.Quantity"></textarea>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>


            <div class="form-group d-flex justify-content-between accordion-body mt-2">
                <input type="submit" value="Submit" class="btn btn-primary"/>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}